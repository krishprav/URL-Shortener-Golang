{
  "version": 2,
  "builds": [
    {
      "src": "urlshortener/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "installCommand": "cd urlshortener && npm install",
        "buildCommand": "cd urlshortener && npm run build"
      }
    },
    {
      "src": "main.go",
      "use": "@vercel/go",
      "config": {
        "maxLambdaSize": "15mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/main.go"
    },
    {
      "src": "/(.*)",
      "dest": "/urlshortener/dist/$1",
      "headers": {
        "cache-control": "s-maxage=0"
      }
    }
  ]
}
